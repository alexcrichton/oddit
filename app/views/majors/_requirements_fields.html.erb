<dl class='requirement'>
  <dt><%= f.label :name %></dt>
  <dd><%= f.text_field :name %></dd>

  <dt><%= f.label :required %></dt>
  <dd><%= f.text_field :required %></dd>

  <dt><%= f.check_box :_destroy %></dt>
  <dd><%= f.label :_destroy, 'Remove?' %></dd>

  <dt><%= f.label :course_id, 'Courses' %></dt>

  <dd>
    <% data = f.object.courses.map{ |c|
          {:name => c.pretty_name, :id => c.id.to_s} }.to_json %>
    <%= f.text_field :course_ids, :class => 'autocomplete', :value => '',
          :'data-courses' => data %>
  </dd>

</dl>
