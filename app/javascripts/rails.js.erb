//= require <jquery/rails>

$(function() {
  $('a[data-remote]').live('ajax:beforeSend', function () {
    $("<%= escape_javascript(image_tag('ajax-small.gif')) %>")
        .insertAfter(this);
  });

  $('a[data-remote]').live('ajax:complete', function () {
    $(this).next('img').remove();
  });
});
